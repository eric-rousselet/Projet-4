{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Articles</h1>
    {% if is_granted('ROLE_ADMIN') %}<a class="nav-link mb-3" href="{{ path('article_new') }}"><button class="btn customButton  my-2 my-sm-0">Create a new article</button></a>{% endif %}
    <table class="table">
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a></td>
                <td><p class="previewArticle">{{ article.content }}</p></td>
                {% if is_granted('ROLE_ADMIN') %}
                <td>
                    <a class="nav-link" href="{{ path('article_edit', {'id': article.id}) }}"><button class="btn customButton  my-2 my-sm-0">Edit</button></a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
