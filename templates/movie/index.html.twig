{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Picture</th>
                <th>Release_date</th>
                <th>Director</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('movie_show', {'id': movie.id}) }}">{{ movie.title }}</a></td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.picture }}</td>
                <td>{{ movie.releaseDate }}</td>
                <td>{{ movie.director }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
